#!/usr/bin/env ruby

require_relative "../lib/user.rb"
require_relative "../lib/teacher.rb"
require_relative "../lib/student.rb"

steve = Student.new
steve.first_name = "Steve"
steve.last_name = "Jobs"

avi = Teacher.new
avi.first_name = "Avi"
avi.last_name = "Flombaum"


some_knowledge = avi.teach 

steve.learn(some_knowledge)

puts "Steve just learned this important knowledge: '#{steve.knowledge.first}' from Avi"

jim = Student.new
jim.first_name = "Jim"
jim.last_name = "Stamety"

some_knowledge = avi.teach
jim.learn(some_knowledge)
puts "Jim just learned this important knowledge: '#{jim.knowledge.first}' from Avi"

david = Student.new
david.first_name = "David"
david.last_name = "Tavin"

some_knowledge = avi.teach
david.learn(some_knowledge)
puts "David just learned this important knowledge: '#{david.knowledge.first}' from Avi"
